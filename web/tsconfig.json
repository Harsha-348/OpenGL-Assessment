{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["dom", "webworker", "esnext"],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "src/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
